  <refentry xml:id='function.curl-error' xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
   <refnamediv>
    <refname>curl_error</refname>
    <refpurpose>Retorna uma string contendo o último erro da sessão atual</refpurpose>
   </refnamediv>
 
 <refsect1 role="description">
  &reftitle.description;
     <methodsynopsis>
      <type>string</type><methodname>curl_error</methodname>
      <methodparam><type>resource</type><parameter>ch</parameter></methodparam>
     </methodsynopsis>
    <para>
     Retorna uma mensagem de erro para a última operação cURL.
    </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    &curl.ch.description;
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Retorna o número do erro ou <literal>''</literal> (a string vazia) se nenhum
   erro ocorreu.
  </para>
 </refsect1>
 
 <refsect1 role="seealso">
  &reftitle.seealso;
    <para>
     <simplelist>
      <member><function>curl_errno</function></member>
      <member><link xlink:href="&url.curl.error;">Códigos de erro cURL</link></member>
     </simplelist>
    </para>
   </refsect1>
   
  </refentry>

