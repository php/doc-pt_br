<refentry xml:id="componere-abstract-definition.addtrait" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>Componere\Abstract\Definition::addTrait</refname>
  <refpurpose>Adiciona Trait</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>Definition</type><methodname>Componere\Abstract\Definition::addTrait</methodname>
   <methodparam><type>string</type><parameter>trait</parameter></methodparam>
  </methodsynopsis>
  <para>
    Usa o trait fornecido para a definição atual.
  </para>

 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>trait</parameter></term>
    <listitem>
     <para>
      O nome de um trait, insensível a maiúsculas/minúsculas.
     </para>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   A definição atual.
  </para>
 </refsect1>

 <refsect1 role="exceptions">
  <title>Exceptions</title>
  <warning>
   <para>
    Lança uma <type>RuntimeException</type> se <type>Definition</type> foi registrada.
   </para>
  </warning>
 </refsect1>


</refentry>

