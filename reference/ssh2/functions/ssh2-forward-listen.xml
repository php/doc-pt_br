<refentry xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink" xml:id="function.ssh2-forward-listen">
 <refnamediv>
  <refname>ssh2_forward_listen</refname>
  <refpurpose>Vincula uma porta no servidor remoto e escuta as conexões</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type class="union"><type>resource</type><type>false</type></type><methodname>ssh2_forward_listen</methodname>
   <methodparam><type>resource</type><parameter>session</parameter></methodparam>
   <methodparam><type>int</type><parameter>port</parameter></methodparam>
   <methodparam choice="opt"><type>string</type><parameter>host</parameter></methodparam>
   <methodparam choice="opt"><type>int</type><parameter>max_connections</parameter><initializer>16</initializer></methodparam>
  </methodsynopsis>
  <simpara>
   Vincula uma porta no servidor remoto e escuta as conexões.
  </simpara>

  &warn.undocumented.func;

 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>session</parameter></term>
    <listitem>
     <simpara>
      Um recurso de sessão SSH, obtido de uma chamada para <function>ssh2_connect</function>.
     </simpara>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>port</parameter></term>
    <listitem>
     <simpara>
      A porta do servidor remoto.
     </simpara>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>host</parameter></term>
    <listitem>
     <simpara>

     </simpara>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>max_connections</parameter></term>
    <listitem>
     <simpara>

     </simpara>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <simpara>
   Retorna um ouvinte SSH2, &return.falseforfailure;.
  </simpara>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <simplelist>
   <member><function>ssh2_forward_accept</function></member>
  </simplelist>
 </refsect1>
</refentry>
