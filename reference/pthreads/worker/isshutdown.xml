<refentry xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink" xml:id="worker.isshutdown">
 <refnamediv>
  <refname>Worker::isShutdown</refname>
  <refpurpose>Detecção de estado</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>bool</type><methodname>Worker::isShutdown</methodname>
   <void/>
  </methodsynopsis>
  <simpara>
   Informa se o trabalhador foi desligado ou não.
  </simpara>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <simpara>
   Retorna se o trabalhador foi desligado ou não.
  </simpara>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <example>
   <title>Detectando o estado de um trabalhador</title>
   <programlisting role="php">
<![CDATA[
<?php
$worker = new Worker();
$worker->start();

var_dump($worker->isShutdown());

$worker->shutdown();

var_dump($worker->isShutdown());
]]>
   </programlisting>
   &example.outputs;
   <screen>
<![CDATA[
bool(false)
bool(true)
]]>
   </screen>
  </example>
 </refsect1>

</refentry>
