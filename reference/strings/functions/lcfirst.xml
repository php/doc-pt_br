  </informaltable>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Exemplo de <function>lcfirst</function></title>
    <programlisting role="php">
<![CDATA[
<?php
$foo = 'OlaMundo';
echo lcfirst($foo), PHP_EOL;      // olaMundo

$bar = 'OLA MUNDO!';
echo lcfirst($bar);               // oLA MUNDO!
echo lcfirst(strtoupper($bar));   // oLA MUNDO!
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

