  <refentry xml:id="function.nl2br" xmlns="http://docbook.org/ns/docbook">
   <refnamediv>
    <refname>nl2br</refname>
    <refpurpose>Insere quebras de linha HTML antes de todas newlines em uma string</refpurpose>
   </refnamediv>
 
 <refsect1 role="description">
  &reftitle.description;
     <methodsynopsis>
      <type>string</type><methodname>nl2br</methodname>
      <methodparam><type>string</type><parameter>string</parameter></methodparam>
     </methodsynopsis>
    <para>
     Retorna <parameter>string</parameter> com '&lt;br /&gt;' inserido
     antes de todas as newlines.
    </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>string</parameter></term>
     <listitem>
    <para>
     A string de entrada.
    </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Returns the altered string.
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
   <para>
     <example>
      <title>usando <function>nl2br</function></title>
      <programlisting role="php">
<![CDATA[
<?php
echo nl2br("foo isn't\n bar");
?>
]]>
      </programlisting>
      &example.outputs;
      <screen>
<![CDATA[
foo isn't<br />
 bar
]]>
      </screen>
     </example>
    </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
    <para>
