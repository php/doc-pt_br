 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>PID de backend do PostgreSQL</title>
    <programlisting role="php">
<![CDATA[
<?php
$conn = pg_pconnect("dbname=publisher");
if (!$conn) {
  echo "Ocorreu um erro.\n";
  exit;
}

// PID do processo de backend. Use PID com pg_get_notify()
$pid = pg_get_pid($conn);
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

