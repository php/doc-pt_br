<refentry xml:id="function.date-offset-get" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>date_offset_get</refname>
  <refpurpose>Retorna a diferença (offset) de tempo do horário de verão</refpurpose>
 </refnamediv>
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>int</type><methodname>date_offset_get</methodname>
   <methodparam><type>DateTime</type><parameter>object</parameter></methodparam>
  </methodsynopsis>
  <methodsynopsis>
   <type>int</type><methodname>DateTime::getOffset</methodname>
   <void/>
  </methodsynopsis>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    &date.datetime.description;
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Retorna a diferença (offset) em segundos ou &false; em caso de falha.
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Comparando a diferença entre Verão e Inverno</title>
    <programlisting role="php">
<![CDATA[
<?php
date_default_timezone_set('Europe/London');

$inverno = new DateTime('2008-12-25 14:25:41');
$verao   = new DateTime('2008-07-14 14:25:41');

echo $inverno->getOffset(); // Diferença do inverno: 0
echo $verao->getOffset(); // Diferença do verão: 3600 = 1 hora
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>
</refentry>

