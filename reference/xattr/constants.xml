<appendix xml:id="xattr.constants" xmlns="http://docbook.org/ns/docbook">
 &reftitle.constants;
 &extension.constants;
 <variablelist>
  <varlistentry xml:id="constant.xattr-root">
   <term>
    <constant>XATTR_ROOT</constant>
    (<type>int</type>)
   </term>
   <listitem>
    <simpara>
     Edita atributo no namespace do administrador. Requer privilégios de root.
    </simpara>
   </listitem>
  </varlistentry>
  <varlistentry xml:id="constant.xattr-dontfollow">
   <term>
    <constant>XATTR_DONTFOLLOW</constant>
    (<type>int</type>)
   </term>
   <listitem>
    <simpara>
     Não segue o link simbólico mas opera no link em si.
    </simpara>
   </listitem>
  </varlistentry>
  <varlistentry xml:id="constant.xattr-create">
   <term>
    <constant>XATTR_CREATE</constant>
    (<type>int</type>)
   </term>
   <listitem>
    <simpara>
     Função falhará se o atributo estendido já existir.
    </simpara>
   </listitem>
  </varlistentry>
  <varlistentry xml:id="constant.xattr-replace">
   <term>
    <constant>XATTR_REPLACE</constant>
    (<type>int</type>)
   </term>
   <listitem>
    <simpara>
     Função falhará se atributo estendido não existir.
    </simpara>
   </listitem>
  </varlistentry>
 </variablelist>
</appendix>

