 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Exemplo de <function>exif_imagetype</function></title>
    <programlisting role="php">
<![CDATA[
<?php
if (exif_imagetype('image.gif') != IMAGETYPE_GIF) {
    echo 'A imagem não é do tipo gif';
}
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>
 <refsect1 role="seealso">
  &reftitle.seealso;
