 <refsect1 role="examples">
  &reftitle.examples;
  <example>
   <title>Exemplo de <function>exif_imagetype</function></title>
   <programlisting role="php">
<![CDATA[
<?php
if (exif_imagetype('image.gif') != IMAGETYPE_GIF) {
    echo 'A imagem não é do tipo gif';
}
?>
]]>
   </programlisting>
  </example>
 </refsect1>
