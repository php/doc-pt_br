  </refsect1>
  <refsect1 role="examples">
   &reftitle.examples;
   <para>
    <example>
     <title>Exemplo da <function>exif_imagetype</function></title>
     <programlisting role="php">
<![CDATA[
<?php
if (exif_imagetype('image.gif') != IMAGETYPE_GIF) {
    echo 'The picture is not a gif';
}
?>
]]>
     </programlisting>
    </example>
   </para>
  </refsect1>
