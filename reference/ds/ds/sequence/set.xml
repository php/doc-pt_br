<refentry xml:id="ds-sequence.set" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>Ds\Sequence::set</refname>
  <refpurpose>Atualiza um valor em um índice específico</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>abstract</modifier> <modifier>public</modifier> <type>void</type><methodname>Ds\Sequence::set</methodname>
   <methodparam><type>int</type><parameter>index</parameter></methodparam>
   <methodparam><type>mixed</type><parameter>value</parameter></methodparam>
  </methodsynopsis>
  <para>
    Atualiza um valor em um índice específico.
  </para>

 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>index</parameter></term>
    <listitem>
     <para>
        O índice do valor a ser atualizado.
     </para>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>value</parameter></term>
    <listitem>
     <para>
        O novo valor.
     </para>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
    &reftitle.returnvalues;
    <para>
        &return.void;
    </para>
 </refsect1>

 <refsect1 role="errors">
  &reftitle.errors;
  <para>
   <classname>OutOfRangeException</classname> se o índice não for válido.
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <example>
   <title>Exemplo de <function>Ds\Sequence::set</function></title>
   <programlisting role="php">
<![CDATA[
<?php
$sequence = new \Ds\Vector(["a", "b", "c"]);

$sequence->set(1, "_");
print_r($sequence);
?>
]]>
   </programlisting>
   &example.outputs.similar;
   <screen>
<![CDATA[
Ds\Vector Object
(
    [0] => a
    [1] => _
    [2] => c
)
]]>
   </screen>
  </example>
  <example>
   <title><function>Ds\Sequence::set</function> example using array syntax</title>
   <programlisting role="php">
<![CDATA[
<?php
$sequence = new \Ds\Vector(["a", "b", "c"]);

$sequence[1] = "_";
print_r($sequence);
?>
]]>
   </programlisting>
   &example.outputs.similar;
   <screen>
<![CDATA[
Ds\Vector Object
(
    [0] => a
    [1] => _
    [2] => c
)
]]>
   </screen>
  </example>
 </refsect1>


</refentry>

