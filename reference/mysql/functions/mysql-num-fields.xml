<refentry xmlns="http://docbook.org/ns/docbook" xml:id="function.mysql-num-fields">
 <refnamediv>
  <refname>mysql_num_fields</refname>
  <refpurpose>Obtém o numero de campos em um resultado</refpurpose>
 </refnamediv>

 <refsynopsisdiv>
  <warning>
   &mysql.alternative.note;
   <simplelist role="alternatives">
    <member><function>mysqli_num_fields</function></member>
    <member><methodname>PDOStatement::columnCount</methodname></member>
   </simplelist>
  </warning>
 </refsynopsisdiv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type class="union"><type>int</type><type>false</type></type><methodname>mysql_num_fields</methodname>
   <methodparam><type>resource</type><parameter>result</parameter></methodparam>
  </methodsynopsis>
  <simpara>
   Obtém o numero de campos de uma consulta.
  </simpara>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   &mysql.result.description;
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <simpara>
   Retorna o numero de capos em um conjunto de resultados <type>resource</type> em
   caso de sucesso&return.falseforfailure;.
  </simpara>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <example>
   <title>Exemplo de <function>mysql_num_fields</function></title>
   <programlisting role="php">
<![CDATA[
<?php
$result = mysql_query("SELECT id,email FROM people WHERE id = '42'");
if (!$result) {
    echo 'Não foi possível executar a consulta: ' . mysql_error();
    exit;
}

/* retorna 2 porque id,email === dois campos */
echo mysql_num_fields($result);
?>
]]>
   </programlisting>
  </example>
 </refsect1>

 <refsect1 role="notes">
  &reftitle.notes;
  <note>
   <simpara>
    &info.deprecated.alias;
    <function>mysql_numfields</function>
   </simpara>
  </note>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <simplelist>
   <member><function>mysql_select_db</function></member>
   <member><function>mysql_query</function></member>
   <member><function>mysql_fetch_field</function></member>
   <member><function>mysql_num_rows</function></member>
  </simplelist>
 </refsect1>
</refentry>
