<refentry xml:id="function.connection-aborted" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>connection_aborted</refname>
  <refpurpose>Verifica se o cliente está desconectado</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>int</type><methodname>connection_aborted</methodname>
   <void/>
  </methodsynopsis>
  <para>
   Verifica se o cliente está desconectado.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Retorna 1 se o cliente está desconectado, 0 caso contrário.
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>connection_status</function></member>
    <member><function>ignore_user_abort</function></member>
    <member>
     <link linkend="features.connection-handling">Tratamento de conexões</link>
     para um descrição completa sobre tratamento de conexões no PHP.
    </member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

