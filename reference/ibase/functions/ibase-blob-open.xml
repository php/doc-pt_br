  <refentry xml:id='function.ibase-blob-open' xmlns="http://docbook.org/ns/docbook">
   <refnamediv>
    <refname>ibase_blob_open</refname>
    <refpurpose>Abre um blob para obter partes de dados</refpurpose>
   </refnamediv>
 
 <refsect1 role="description">
  &reftitle.description;
     <methodsynopsis>
      <type>resource</type><methodname>ibase_blob_open</methodname>
      <methodparam><type>resource</type><parameter>link_identifier</parameter></methodparam>
      <methodparam><type>string</type><parameter>blob_id</parameter></methodparam>
     </methodsynopsis>
     <methodsynopsis>
      <type>resource</type><methodname>ibase_blob_open</methodname>
      <methodparam><type>string</type><parameter>blob_id</parameter></methodparam>
     </methodsynopsis>
    <para>
     Abre um BLOB existente para leitura.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>link_identifier</parameter></term>
     <listitem>
      <para>
       Um link identificador InterBase. Se omitido, o último link aberto é
       usado.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>blob_id</parameter></term>
     <listitem>
      <para>
       Um id de BLOB.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Retorna um manipulador de BLOB para uso posterior com
   <function>ibase_blob_get</function> ou &false; em caso de falha.
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>ibase_blob_close</function></member>
    <member><function>ibase_blob_echo</function></member>
    <member><function>ibase_blob_get</function></member>
   </simplelist>
  </para>
 </refsect1>
 
 </refentry>

