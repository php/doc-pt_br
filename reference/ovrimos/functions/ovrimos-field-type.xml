  <refentry xml:id="function.ovrimos-field-type" xmlns="http://docbook.org/ns/docbook">
   <refnamediv>
    <refname>ovrimos_field_type</refname>
    <refpurpose>
     Retorna o tipo (numérico) da coluna
    </refpurpose>
   </refnamediv>
   <refsect1>
    <title>Descrição</title>
     <methodsynopsis>
      <type>int</type><methodname>ovrimos_field_type</methodname>
      <methodparam><type>int</type><parameter>result_id</parameter></methodparam>
      <methodparam><type>int</type><parameter>field_number</parameter></methodparam>
     </methodsynopsis>
    <para>
     <function>ovrimos_field_type</function> retorna o tipo
     (numérico) da coluna no índice (baseado em 1) especificado por
     <parameter>field_number</parameter>.
    </para>
    </refsect1>
  </refentry>

