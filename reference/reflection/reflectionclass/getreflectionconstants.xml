 <refsect1 role="examples">
  &reftitle.examples;
  <example xml:id="reflectionclass.getreflectionconstants.example">
   <title>Exemplo básico de <function>ReflectionClass::getReflectionConstants</function></title>
   <programlisting role="php">
<![CDATA[
<?php
class Foo {
    public    const FOO  = 1;
    protected const BAR  = 2;
    private   const BAZ  = 3;
}

$foo = new Foo();

$reflect = new ReflectionClass($foo);
$consts  = $reflect->getReflectionConstants();

foreach ($consts as $const) {
    print $const->getName() . "\n";
}

var_dump($consts);

?>
]]>
   </programlisting>
