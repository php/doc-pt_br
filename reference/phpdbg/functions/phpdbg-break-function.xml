<refentry xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink" xml:id="function.phpdbg-break-function">
 <refnamediv>
  <refname>phpdbg_break_function</refname>
  <refpurpose>Insere um ponto de interrupção na entrada de uma função</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>void</type><methodname>phpdbg_break_function</methodname>
   <methodparam><type>string</type><parameter>function</parameter></methodparam>
  </methodsynopsis>
  <simpara>
   Insere um ponto de interrupção na entrada da <parameter>function</parameter> fornecida.
  </simpara>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>function</parameter></term>
    <listitem>
     <simpara>
      O nome da função.
     </simpara>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <simpara>
   &return.void;
  </simpara>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <simplelist>
   <member><function>phpdbg_break_file</function></member>
   <member><function>phpdbg_break_method</function></member>
   <member><function>phpdbg_break_next</function></member>
   <member><function>phpdbg_clear</function></member>
  </simplelist>
 </refsect1>

</refentry>
