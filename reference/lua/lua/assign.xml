<refentry xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink" xml:id="lua.assign">
 <refnamediv>
  <refname>Lua::assign</refname>
  <refpurpose>Atribui uma variável PHP para o script Lua</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>mixed</type><methodname>Lua::assign</methodname>
   <methodparam><type>string</type><parameter>name</parameter></methodparam>
   <methodparam><type>string</type><parameter>value</parameter></methodparam>
  </methodsynopsis>
  <simpara>

  </simpara>

  &warn.undocumented.func;

 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>name</parameter></term>
    <listitem>
     <simpara>

     </simpara>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>value</parameter></term>
    <listitem>
     <simpara>

     </simpara>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <simpara>
   Retorna <varname>$this</varname> ou &null; caso a chamada falhe.
  </simpara>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <example>
   <title>Exemplo da função <function>Lua::assign</function></title>
   <programlisting role="php">
<![CDATA[
<?php
$lua = new Lua();
$lua->assign("variavel_php", array(1=>1, 2, 3)); //os índices dos vetores em lua iniciam com 1
$lua->eval(<<<CODE
    print(variavel_php);
CODE
);
?>
]]>
   </programlisting>
   &example.outputs;
   <screen>
<![CDATA[
Array
 (
     [1] => 1
     [2] => 2
     [3] => 3
 )
]]>
   </screen>
  </example>
 </refsect1>

