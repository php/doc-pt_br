      </entry>
     </row>
    </tbody>
   </tgroup>
  </informaltable>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>

  <example>
   <title>Recortando o logotipo do PHP.net</title>
   <programlisting role="php">
<![CDATA[
<?php
// Criar instâncias de imagens
$src = imagecreatefromgif('php.gif');
$dest = imagecreatetruecolor(80, 40);

// Copiar
imagecopy($dest, $src, 0, 0, 20, 13, 80, 40);

// Exibir e liberar da memória
header('Content-Type: image/gif');
imagegif($dest);

imagedestroy($dest);
imagedestroy($src);
?>
]]>
   </programlisting>
   &example.outputs.similar;
   <mediaobject>
    <alt>Saída do exemplo: Recortando o logotipo do PHP.net</alt>
     <imageobject>
      <imagedata fileref="en/reference/image/figures/imagecopy.gif"/>
     </imageobject>
    </mediaobject>
   </example>
  </para>
 </refsect1>

