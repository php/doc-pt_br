 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Exemplo de <function>imageellipse</function></title>
    <programlisting role="php">
<![CDATA[
<?php

// Cria uma imagem vazia.
$image = imagecreatetruecolor(400, 300);

// Seleciona a cor de fundo.
$bg = imagecolorallocate($image, 0, 0, 0);

// Preenche o fundo com a cor selecionada acima.
imagefill($image, 0, 0, $bg);

// Escolhe uma cor para a elipse.
$col_ellipse = imagecolorallocate($image, 255, 255, 255);

// Desenha a elipse.
imageellipse($image, 200, 150, 300, 200, $col_ellipse);

// Mostra a imagem.
header("Content-type: image/png");
imagepng($image);

?>
]]>
    </programlisting>
    &example.outputs.similar;
    <mediaobject>
     <alt>Sa√≠da do exemplo: imageellipse()</alt>
     <imageobject>
      <imagedata fileref="en/reference/image/figures/imageellipse.png"/>
     </imageobject>
    </mediaobject>
   </example>
  </para>
 </refsect1>
 <refsect1 role="notes">
  &reftitle.notes;
  <note>
   <para>
    <function>imageellipse</function> ignora <function>imagesetthickness</function>.
   </para>
  </note>
 </refsect1>
