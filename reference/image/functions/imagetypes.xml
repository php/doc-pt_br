 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Verificando o suporte a PNG</title>
    <programlisting role="php">
<![CDATA[
<?php
if (imagetypes() & IMG_PNG) {
    echo "O suporte a PNG está ativado";
}
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

