<refentry xml:id="function.token-name" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>token_name</refname>
  <refpurpose>Pega o nome simbólico de um dado token do PHP</refpurpose>
 </refnamediv>
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>string</type><methodname>token_name</methodname>
   <methodparam><type>int</type><parameter>id</parameter></methodparam>
  </methodsynopsis>
  <para>
   <function>token_name</function> Pega o nome simbólico para o
   valor de <parameter>id</parameter>.
  </para>
 </refsect1>
 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>id</parameter></term>
     <listitem>
      <para>
       O valor do token.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>
 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   O nome simbólico do dado <parameter>id</parameter>.
  </para>
 </refsect1>
 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Exemplo de <function>token_name</function></title>
    <programlisting role="php">
<![CDATA[
<?php
// 260 é o valor do token T_EVAL
echo token_name(260);        // -> "T_EVAL"

// uma constante token é igual ao seu próprio nome
echo token_name(T_FUNCTION); // -> "T_FUNCTION"
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>
 
 <refsect1 role="seealso">
  &reftitle.seealso;
  <simplelist>
   <member><link linkend="tokens">Lista de tokens do analisador</link></member>
   <member><function>PhpToken::getTokenName</function></member>
  </simplelist>
 </refsect1>
</refentry>
