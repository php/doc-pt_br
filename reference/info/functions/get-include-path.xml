  <refentry xml:id="function.get-include-path" xmlns="http://docbook.org/ns/docbook">
   <refnamediv>
    <refname>get_include_path</refname>
    <refpurpose>Obtém a opção de configuração include_path atual</refpurpose>
   </refnamediv>
 
 <refsect1 role="description">
  &reftitle.description;
     <methodsynopsis>
      <type>string</type><methodname>get_include_path</methodname>
      <void />
     </methodsynopsis>
    <simpara>
     Obtém o valor atual da opção de configuração
     <link linkend="ini.include-path">include_path</link>.
    </simpara>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Retorna o caminho, como uma string.
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
    <para>
     <example>
      <title>Exemplo <function>get_include_path</function></title>
      <programlisting role="php">
<![CDATA[
<?php
// Funciona a partir do PHP 4.3.0
echo get_include_path();

// Funciona em todas as versões do PHP
echo ini_get('include_path');
?>
]]>
      </programlisting>
     </example>
    </para>
   </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>ini_get</function></member>
    <member><function>restore_include_path</function></member>
    <member><function>set_include_path</function></member>
    <member><function>include</function></member>
   </simplelist>
  </para>
 </refsect1>

  </refentry>

