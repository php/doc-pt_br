<refentry xml:id="function.ldap-count-entries" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>ldap_count_entries</refname>
  <refpurpose>Conta o número de entradas em uma pesquisa</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>int</type><methodname>ldap_count_entries</methodname>
   <methodparam><type>LDAP\Connection</type><parameter>ldap</parameter></methodparam>
   <methodparam><type>LDAP\Result</type><parameter>result</parameter></methodparam>
  </methodsynopsis>
  <para>
   Retorna o número de entradas armazenadas no resultado das operações de pesquisa
   anteriores.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>ldap</parameter></term>
     <listitem>
      <para>
       &ldap.parameter.ldap;
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>result</parameter></term>
     <listitem>
      <para>
       &ldap.parameter.result;
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Retorna o número de entradas no resultado,&return.falseforfailure;.
  </para>
 </refsect1>

 <refsect1 role="changelog">
  &reftitle.changelog;
  <informaltable>
   <tgroup cols="2">
    <thead>
     <row>
      <entry>&Version;</entry>
      <entry>&Description;</entry>
     </row>
    </thead>
    <tbody>
     &ldap.changelog.ldap-object;
     &ldap.changelog.result-object;
    </tbody>
   </tgroup>
  </informaltable>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example xml:id="ldap-count-entries.example.basic">
    <title>Exemplo de <function>ldap_count_entries</function></title>
    <para>
     Obtém o número de entradas no resultado.
    </para>
    <programlisting role="php">
     <![CDATA[
     // $ds é uma instância válida de LDAP\Connection para um servidor de diretório

     $dn        = 'ou=example,dc=org';
     $filter    = '(|(sn=Doe*)(givenname=John*))';
     $justthese = array('ou', 'sn', 'givenname', 'mail');

     $sr = ldap_search($ds, $dn, $filter, $justthese);

     var_dump(ldap_count_entries($ds, $sr));
     ]]>
    </programlisting>
    &example.outputs.similar;
    <screen>
     <![CDATA[
     int(1)
     ]]>
    </screen>
   </example>
  </para>
 </refsect1>
</refentry>
