 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Um exemplo de <function>Imagick::setFont</function></title>
    <para>
     Examplo de uso de Imagick::setFont
    </para>
    <programlisting role="php">
<![CDATA[
<?php
/* Cria novo objeto Imagick */
$im = new Imagick();

/* Define a fonte para o objeto */
$im->setFont("example.ttf");

/* Cria nova legenda */
$im->newPseudoImage(100, 100, "caption:Hello");

/* Faz algo com a imagem */
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

