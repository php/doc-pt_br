<appendix xml:id="pcre.examples">
 &reftitle.examples;
 <para>
  <example>
   <title>Exemplos de padrões válidos</title>
   <itemizedlist>
    <listitem><simpara><literal>/&lt;\/\w+&gt;/</literal></simpara></listitem>
    <listitem><simpara><literal>|(\d{3})-\d+|Sm</literal></simpara></listitem>
    <listitem><simpara><literal>/^(?i)php[34]/</literal></simpara></listitem>
    <listitem><simpara><literal>{^\s+(\s+)?$}</literal></simpara></listitem>
   </itemizedlist>
  </example>
 </para>
 <para>
  <example>
   <title>Exemplos de padrões inválidos</title>
   <itemizedlist>
    <listitem>
     <simpara>
      <literal>/href='(.*)'</literal> - faltando o delimitador final
     </simpara>
    </listitem>
    <listitem>
     <simpara>
      <literal>/\w+\s*\w+/J</literal> - modificador 'J' desconhecido
     </simpara>
    </listitem>
    <listitem>
     <simpara>
      <literal>1-\d3-\d3-\d4|</literal> - faltando delimitador inicial
     </simpara>
    </listitem>
   </itemizedlist>
  </example>
 </para>
</appendix>

