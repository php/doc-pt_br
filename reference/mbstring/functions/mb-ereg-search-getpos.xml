<refentry xml:id="function.mb-ereg-search-getpos" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>mb_ereg_search_getpos</refname>
  <refpurpose>Retorna o ponto de início para a próxima correspondência de expressão regular</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>int</type><methodname>mb_ereg_search_getpos</methodname>
   <void/>
  </methodsynopsis>
  <simpara>
   Retorna o ponto de início para a próxima correspondência de expressão regular.
  </simpara>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <simpara>
   <function>mb_ereg_search_getpos</function> retorna
   o ponto de início da correspondência de expressão regular para
   <function>mb_ereg_search</function>,
   <function>mb_ereg_search_pos</function>,
   <function>mb_ereg_search_regs</function>. A posição é
   representada em bytes a partir do início da string.
  </simpara>
 </refsect1>

 <refsect1 role="notes">
  &reftitle.notes;

  &note.mbstring.encoding.internal;
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>mb_regex_encoding</function></member>
    <member><function>mb_ereg_search_setpos</function></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

