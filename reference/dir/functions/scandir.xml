 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Um exemplo simples de <function>scandir</function></title>
    <programlisting role="php">
<![CDATA[
<?php
$dir    = '/tmp';
$files1 = scandir($dir);
$files2 = scandir($dir, 1);

print_r($files1);
print_r($files2);
?>
]]>
    </programlisting>
    &example.outputs.similar;
    <screen>
<![CDATA[
Array
(
    [0] => .
    [1] => ..
    [2] => bar.php
    [3] => foo.txt
    [4] => algumdiretorio
)
Array
(
    [0] => algumdiretorio
    [1] => foo.txt
    [2] => bar.php
    [3] => ..
    [4] => .
)
]]>
    </screen>
   </example>
  </para>
 </refsect1>

