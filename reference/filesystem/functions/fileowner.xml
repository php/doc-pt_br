<refentry xml:id="function.fileowner" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>fileowner</refname>
  <refpurpose>Obtem o proprietário do arquivo</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type class="union"><type>int</type><type>false</type></type><methodname>fileowner</methodname>
   <methodparam><type>string</type><parameter>filename</parameter></methodparam>
  </methodsynopsis>
  <para>
   Obtém o proprietário do arquivo.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>filename</parameter></term>
     <listitem>
      <para>
       Caminho para o arquivo.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Retorna a ID do usuário do proprietário do arquivo, &return.falseforfailure;.
   A ID do usuário é retornada em formato numérico, use
   a função <function>posix_getpwuid</function> para obter o nome do usuário.
  </para>
 </refsect1>

 <refsect1 role="errors">
  &reftitle.errors;
  &fs.emits.warning.on.failure;
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Encontrando o proprietário de um arquivo</title>
    <programlisting role="php">
<![CDATA[
<?php
$filename = 'index.php';
print_r(posix_getpwuid(fileowner($filename)));
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

 <refsect1 role="notes">
  &reftitle.notes;
  &note.clearstatcache;
  &tip.fopen-wrapper.stat;
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>filegroup</function></member>
    <member><function>stat</function></member>
    <member><function>posix_getpwuid</function></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

