 <refnamediv>
  <refname>$_FILES</refname>
  <refpurpose>Variáveis de Upload de Arquivos HTTP</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <para>
   Um <type>array</type> associativo de items enviado através do script atual
   pelo método HTTP POST.
   A estrutura deste array é detalhada na seção
   <link linkend="features.file-upload.post-method">Uploads com o método POST</link>.
  </para>
 </refsect1>

 <refsect1 role="notes">
  &reftitle.notes;
  &note.is-superglobal;
 </refsect1>

