<refentry xml:id="context.mongodb" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink" role="noversion">
 <refnamediv>
  <refname>Opções de contexto do MongoDB</refname>
  <refpurpose>Lista de opções de contexto do MongoDB</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <para>
   Opções de contexto do transportador <literal>mongodb://</literal>.
  </para>
 </refsect1>

 <refsect1 role="options"><!-- {{{ -->
  &reftitle.options;
  <para>
   <variablelist>
    <varlistentry xml:id="context.mongodb.log-cmd-insert">
     <term>
      <parameter>log_cmd_insert</parameter>
      <type>callable</type>
     </term>
     <listitem>
      <para>
       Uma função callback chamada ao inserir um documento, veja a função <function>log_cmd_insert</function>.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="context.mongodb.log-cmd-delete">
     <term>
      <parameter>log_cmd_delete</parameter>
      <type>callable</type>
     </term>
     <listitem>
      <para>
       Uma função callback chamada ao remover um documento, veja a função <function>log_cmd_delete</function>.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="context.mongodb.log-cmd-update">
     <term>
      <parameter>log_cmd_update</parameter>
      <type>callable</type>
     </term>
     <listitem>
      <para>
       Uma função callback chamada ao atualizar um documento, veja a função <function>log_cmd_update</function>.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="context.mongodb.log-write-batch">
     <term>
      <parameter>log_write_batch</parameter>
      <type>callable</type>
     </term>
     <listitem>
      <para>
       Uma função callback chamada ao executar uma gravação em lote, veja a função <function>log_write_batch</function>.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="context.mongodb.log-reply">
     <term>
      <parameter>log_reply</parameter>
      <type>callable</type>
     </term>
     <listitem>
      <para>
       Uma função callback chamada ao ler uma resposta do MongoDB, veja a função <function>log_reply</function>.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="context.mongodb.log-getmore">
     <term>
      <parameter>log_getmore</parameter>
      <type>callable</type>
     </term>
     <listitem>
      <para>
       Uma função callback chamada ao recuperar mais resultados do cursor do MongoDB, veja a função <function>log_getmore</function>.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="context.mongodb.log-killcursor">
     <term>
      <parameter>log_killcursor</parameter>
      <type>callable</type>
     </term>
     <listitem>
      <para>
       Uma função callback chamada ao executar o opcode killcursor, veja a função <function>log_killcursor</function>.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1><!-- }}} -->

